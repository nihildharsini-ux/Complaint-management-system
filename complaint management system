#servlet code
package com.complaint;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.*;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

@WebServlet("/ComplaintServlet")
public class ComplaintServlet extends HttpServlet {
    private Connection conn;

    public void init() throws ServletException {
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            conn = DriverManager.getConnection(
                "jdbc:mysql://localhost:3306/complaintDB", "root", "nihil0909");
        } catch (Exception e) {
            throw new ServletException(e);
        }
    }

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        // Submit new complaint
        response.setContentType("text/html");
        PrintWriter out = response.getWriter();
        String username = request.getParameter("username");
        String issue = request.getParameter("issue");

        try {
            String sql = "INSERT INTO complaints(username, issue) VALUES (?, ?)";
            PreparedStatement ps = conn.prepareStatement(sql, Statement.RETURN_GENERATED_KEYS);
            ps.setString(1, username);
            ps.setString(2, issue);
            int rows = ps.executeUpdate();

            if (rows > 0) {
                ResultSet rs = ps.getGeneratedKeys();
                if (rs.next()) {
                    int complaintId = rs.getInt(1);
                    out.println("<h3>Complaint Submitted Successfully! Your Complaint ID is: " + complaintId + "</h3>");
                }
            } else {
                out.println("<h3>Failed to submit complaint.</h3>");
            }
        } catch (SQLException e) {
            out.println("Error: " + e.getMessage());
        }
    }

    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        // Check complaint status
        response.setContentType("text/html");
        PrintWriter out = response.getWriter();
        int id = Integer.parseInt(request.getParameter("id"));

        try {
            String sql = "SELECT username, issue, status FROM complaints WHERE id=?";
            PreparedStatement ps = conn.prepareStatement(sql);
            ps.setInt(1, id);
            ResultSet rs = ps.executeQuery();

            if (rs.next()) {
                out.println("<h3>Complaint Details:</h3>");
                out.println("ID: " + id + "<br>");
                out.println("Name: " + rs.getString("username") + "<br>");
                out.println("Issue: " + rs.getString("issue") + "<br>");
                out.println("Status: " + rs.getString("status") + "<br>");
            } else {
                out.println("<h3>No complaint found with ID: " + id + "</h3>");
            }
        } catch (SQLException e) {
            out.println("Error: " + e.getMessage());
        }
    }

    public void destroy() {
        try {
            if (conn != null) conn.close();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}


#complaint.jsp
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>Submit Complaint</title>
</head>
<body>
    <h2>Submit Complaint</h2>
    <form action="ComplaintServlet" method="post">
        Name: <input type="text" name="username" required><br><br>
        Issue: <textarea name="issue" rows="4" cols="50" required></textarea><br><br>
        <input type="submit" value="Submit Complaint">
    </form>
</body>
</html>


